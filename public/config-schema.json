{
  "type": "object",
  "required": [
    "datasets"
  ],
  "allOf": [
    {
      "title": "Source de données",
      "properties": {
        "datasets": {
          "type": "array",
          "items": [
            {
              "title": "Jeu de données",
              "description": "Ce jeu doit contenir au moins un champ avec le concept de date",
              "type": "object",
              "x-fromUrl": "api/v1/datasets?status=finalized&q={q}&select=id,title,isRest,schema&{context.datasetFilter}&short-concept=date,startDate,endDate",
              "x-itemsProp": "results",
              "x-itemTitle": "title",
              "x-itemKey": "href",
              "additionalProperties": false,
              "properties": {
                "href": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "isRest": {
                  "type": "boolean"
                },
                "schema": {
                  "type": "array"
                }
              }
            }
          ]
        }
      }
    },
    {
      "title": "Affichage",
      "description": "Gérer l'affichage du calendrier",
      "properties": {
        "labelField": {
          "type": "object",
          "title": "Champ de libellé",
          "description": "Choisissez le champ représentant le libellé d'un événement.",
          "x-fromUrl": "{datasets.0.href}/schema?calculated=false",
          "x-itemTitle": "label",
          "x-itemKey": "key"
        },
        "color": {
          "type": "object",
          "title": "Type de couleur",
          "required": [
            "type"
          ],
          "oneOf": [
            {
              "title": "Calendrier multicolore",
              "additionalProperties": false,
              "required": [
                "categoryField"
              ],
              "properties": {
                "type": {
                  "const": "multicolor"
                },
                "categoryField": {
                  "type": "object",
                  "title": "Champ de catégorie",
                  "description": "Choisissez le champ permettant de distinguer plusieurs catégories d'événements. Chaque catégorie se verra attribuer une couleur distincte si l'option multicolore est séléctionnée.",
                  "x-fromUrl": "{datasets.0.href}/schema?calculated=false",
                  "x-itemTitle": "category",
                  "x-itemKey": "key"
                },
                "colors": {
                  "type": "object",
                  "title": "Couleurs",
                  "oneOf": [
                    {
                      "title": "Palette précalculée",
                      "required": [
                        "type",
                        "name"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "type": {
                          "const": "palette"
                        },
                        "name": {
                          "type": "string",
                          "oneOf": [
                            {
                              "const": "Accent",
                              "title": "Accent"
                            },
                            {
                              "const": "Dark2",
                              "title": "Foncé"
                            },
                            {
                              "const": "Paired",
                              "title": "Paires"
                            },
                            {
                              "const": "Set1",
                              "title": "Ensemble 1"
                            },
                            {
                              "const": "Set2",
                              "title": "Ensemble 2"
                            },
                            {
                              "const": "Set3",
                              "title": "Ensemble 3"
                            },
                            {
                              "const": "Pastel1",
                              "title": "Pastel 1"
                            },
                            {
                              "const": "Pastel2",
                              "title": "Pastel 2"
                            }
                          ],
                          "default": "Accent"
                        },
                        "offset": {
                          "type": "integer",
                          "title": "Décallage",
                          "default": 0
                        }
                      }
                    },
                    {
                      "title": "Palette personnalisée",
                      "required": [
                        "type",
                        "styles"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "type": {
                          "const": "manual"
                        },
                        "styles": {
                          "title": "Couleurs et ordre",
                          "type": "array",
                          "x-fromUrl": "{datasets.0.href}/values_agg?field={datasets.1.categoryField.key}&size=0&agg_size=15",
                          "x-display": "list",
                          "x-itemTitle": "value",
                          "x-itemKey": "value",
                          "x-itemsProp": "aggs",
                          "items": {
                            "type": "object",
                            "required": [
                              "value"
                            ],
                            "additionalProperties": false,
                            "properties": {
                              "value": {
                                "type": "string",
                                "x-display": "hidden"
                              },
                              "color": {
                                "type": "string",
                                "title": "Couleur",
                                "format": "hexcolor",
                                "default": "#828282",
                                "x-display": "color-picker"
                              }
                            }
                          }
                        }
                      }
                    }
                  ],
                  "default": {
                    "type": "palette",
                    "name": "Accent",
                    "offset": 0
                  }
                }
              }
            },
            {
              "title": "Calendrier monochrome",
              "additionalProperties": false,
              "properties": {
                "type": {
                  "const": "monochrome"
                },
                "colors": {
                  "type": "object",
                  "title": "Couleur",
                  "required": [
                    "type"
                  ],
                  "oneOf": [
                    {
                      "title": "Thème",
                      "additionalProperties": false,
                      "properties": {
                        "type": {
                          "const": "theme"
                        },
                        "strValue": {
                          "title": "Couleur",
                          "type": "string",
                          "oneOf": [
                            {
                              "const": "primary",
                              "title": "Primaire"
                            },
                            {
                              "const": "secondary",
                              "title": "Secondaire"
                            }
                          ]
                        }
                      }
                    },
                    {
                      "title": "Personnalisée",
                      "additionalProperties": false,
                      "properties": {
                        "type": {
                          "const": "custom"
                        },
                        "hexValue": {
                          "type": "string",
                          "title": "Couleur",
                          "format": "hexcolor",
                          "default": "#828282",
                          "x-display": "color-picker"
                        }
                      }
                    }
                  ],
                  "default": {
                    "type": "theme",
                    "strValue": "primary"
                  }
                }
              }
            }
          ],
          "default": {
            "type": "monochrome"
          }
        }
      }
    },
    {
      "title": "Vignette d'événement",
      "description": "Gérer le contenu de l'affichage lors du clic sur un événement (en plus du libellé).",
      "properties": {
        "descriptionField": {
          "type": "object",
          "title": "Champ de description",
          "description": "Choisissez le champ permettant de fournir une description de l'événement, interprète le html et le markdown",
          "x-fromUrl": "{datasets.0.href}/schema?calculated=false",
          "x-itemTitle": "description",
          "x-itemKey": "key"
        },
        "thumbnailFields": {
          "title": "Champs à afficher dans la vignette",
          "type": "array",
          "x-fromUrl": "{datasets.0.href}/schema?calculated=false",
          "x-itemTitle": "label",
          "x-itemKey": "key",
          "items": {
            "type": "string"
          }
        }
      }
    },
    {
      "title": "Edition",
      "x-if": "datasets.0.isRest",
      "properties": {
        "crowdSourcing": {
          "type": "boolean",
          "title": "Activer le crowd sourcing"
        },
        "contribution": {
          "title": "Jeu de données des contributions externes",
          "x-if": "parent.value.crowdSourcing",
          "type": "object",
          "x-fromUrl": "api/v1/datasets?status=finalized&q={q}&select=id,title,isRest,schema&{context.datasetFilter}",
          "x-itemsProp": "results",
          "x-itemTitle": "title",
          "x-itemKey": "href",
          "additionalProperties": false,
          "properties": {
            "href": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "isRest": {
              "type": "boolean"
            },
            "schema": {
              "type": "array"
            }
          }
        },
        "contribMode": {
          "title": "Type de contributions acceptées",
          "description": "Si le compte n'est pas requis, l'application doit être partagée via un lien de partage. Si le compte est requis, les contributeurs doivent avoir un accès en lecture sur le jeu de données principal.",
          "type": "string",
          "x-if": "parent.value.crowdSourcing",
          "oneOf": [
            {
              "const": "simple-cud",
              "title": "Ajouts, modifications et suppressions"
            },
            {
              "const": "advanced",
              "title": "Workflow de contribution avancé (compte requis)"
            }
          ],
          "default":"advanced"
        },
        "deleteValidatedContribs": {
          "title": "Supprimer les contributions après validation",
          "type": "boolean",
          "default": false,
          "x-if": "parent.value.crowdSourcing"
        },
        "editionFields": {
          "title": "Champs ouverts à l'édition",
          "type": "array",
          "x-fromUrl": "{datasets.0.href}/schema?calculated=false",
          "x-itemTitle": "label",
          "x-itemKey": "key",
          "items": {
            "type": "string"
          }
        }
      }
    }
  ]
}